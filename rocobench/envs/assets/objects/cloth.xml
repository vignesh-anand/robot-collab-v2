<mujoco model='tosser-v1.5'>
    <compiler inertiafromgeom='auto' angle='radian'/>
    <size nconmax="1000" njmax="5000" nstack="1000000"/>
    <option timestep="0.002" solver="CG" tolerance="1e-6"/>

    <default>
        <joint limited='true' damping='1' armature='0'/>
        <geom contype='1' conaffinity='1' condim='3' rgba='0.8 0.6 .4 1'
        	margin="0.001" solref=".02 1" solimp=".8 .8 .01" material="geom"/>
    </default>

    <visual>
        <map fogstart="3" fogend="5" force="0.1" znear="0.1"/>
        <quality shadowsize="2048"/>
        <global offwidth="800" offheight="800"/>
    </visual>

    <asset>
		<texture type="skybox" builtin="gradient" width="128" height="128" rgb1=".4 .6 .8" 
            rgb2="0 0 0"/>  
        <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278" 
            rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>  
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" 
            width="512" height="512"/>  

        <material name='MatPlane' reflectance='0.5' texture="texplane" texrepeat="1 1" texuniform="true"/>
        <material name='geom' texture="texgeom" texuniform="true"/>
    </asset>

    <worldbody>     
        <light directional='false' diffuse='.8 .8 .8' specular='0.3 0.3 0.3' ambient='0.1 0.1 0.1' pos='0 1 3.0' dir='0 -.15 -1'/>
		<geom name='floor' pos='0 0 -0.8' size='3 3 .125' type='plane' material="MatPlane" condim='3'/>
        <geom name='table_top' pos='0 1 -0.04' size='0.5 0.5 0.04' type='box'/>
        <geom name='table_leg' pos='0 1 -0.408' size='0.05 0.05 0.4' type='box'/>

        <body name="B0_0B0_0" pos="-0.3 0 0" euler="-1.57 0 0">
            <freejoint/>
            <composite prefix="B0_0" type="cloth" count="13 13 1" spacing="0.05" flatinertia="0.01">
                <joint kind="main" damping="0.001"/>
                <joint kind="twist" damping="0.0001"/>
                <geom type="capsule" size="0.015 0.01" rgba=".8 .2 .1 1" friction="0.1 0.005 0.0001" mass="0.003"/>
                <skin material="geom" texcoord="true" inflate="0.005" subgrid="2"/>
            </composite>
        </body>

